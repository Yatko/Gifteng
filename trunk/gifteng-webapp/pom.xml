    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
        
        <filters>
            <filter>assembly/config-${env}.properties</filter>
        </filters>
        
        
        
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.15</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.15</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <!-- <forkMode>never</forkMode> -->
                    <systemProperties>
                        <!-- Specific log4j config for tests -->
                        <property>
                            <name>log4j.configuration</name>
                            <value>log4j-test.properties</value>
                        </property>
                    </systemProperties>
                    <includes>
                        <include>**/*.class</include>
                    </includes>
                    <excludedGroups>com.venefica.service.integration.IntegrationTestMarker</excludedGroups>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <warName>venefica</warName>
                    <filters>
                        <filter>assembly/config-${env}.properties</filter>
                    </filters>
                    <webResources>
                        <resource>
                            <directory>src/main/webapp/WEB-INF/views</directory>
                            <filtering>true</filtering>
                            <includes>
                                <include>**/*.jsp</include> 
                            </includes>
                            <targetPath>WEB-INF/views</targetPath>
                        </resource>
                        <!--
                        <resource>
