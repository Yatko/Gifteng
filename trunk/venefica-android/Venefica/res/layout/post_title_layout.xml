<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_title_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ffa77bde"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/corners_bar"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSalePost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/forsale_on" />

            <Button
                android:id="@+id/btnWantedPost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/wanted_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10.0dip" >

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10.0dip"
                android:text="@string/title"
                android:textColor="#000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@android:color/white"
                android:inputType="textLongMessage|textCapSentences" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="2.0dip"
            android:background="#ffc0c0c0" />

        <RelativeLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5.0dip" >

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="@string/description"
                android:textColor="#000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_toRightOf="@+id/descriptionText"
                android:background="#ffffffff"
                android:gravity="top|left|center"
                android:hint="@string/optional"
                android:inputType="textCapSentences|textMultiLine"
                android:lines="7"
                android:maxLength="420"
                android:maxLines="5"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="2.0dip"
            android:background="#ffc0c0c0" />

        <LinearLayout
            android:id="@+id/layoutDataExpires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="@string/date_expires"
                android:textColor="#000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbCustomExpires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="@string/custom_date"
                android:textColor="#000"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblExpires2Months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10.0dip"
                android:text="@string/expires_in_2_months"
                android:textColor="#000"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDate"
                android:layout_width="fill_parent"
                android:layout_height="32dip"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="5.0dip"
                android:background="#ffffffff"
                android:clickable="true"
                android:text="@string/temp_string"
                android:textColorHint="#000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>