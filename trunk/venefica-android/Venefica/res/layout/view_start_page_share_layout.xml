<?xml version="1.0" encoding="utf-8"?>
<!-- view layout share buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100" >

        <!-- Divider line -->

        <TextView
            android:id="@+id/divActLoginShare01"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:background="@color/gray" />
        <!-- share -->

        <TextView
            android:id="@+id/txtActLoginShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:text="@string/g_label_share" />
        <!-- Divider line -->

        <TextView
            android:id="@+id/divActLoginShare02"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="40"
            android:background="@color/gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="100" >
		<!-- chat -->
        <ImageButton
            android:id="@+id/imgBtnActLoginShareChat"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="10dp"
            android:layout_weight="25"
            android:src="@drawable/icon_monolog" />
		<!-- tweeter -->
        <ImageButton
            android:id="@+id/imgBtnActLoginShareTweeter"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="25"
            android:src="@drawable/icon_twitter" />
		<!-- facebook -->
        <ImageButton
            android:id="@+id/imgBtnActLoginShareFacebook"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="25"
            android:src="@drawable/icon_facebook" />
		<!-- mail -->
        <ImageButton
            android:id="@+id/imgBtnActLoginShareMail"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="5dp"
            android:layout_weight="25"
            android:src="@drawable/icon_mail" />
    </LinearLayout>

</LinearLayout>