<?xml version="1.0" encoding="utf-8"?>
<!-- view to verify invitation code -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp" >

    <EditText
        android:id="@+id/edtActLoginInvitationCode"
        style="?EditTextGrayBorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:hint="@string/g_hint_invitation_code"
        android:paddingLeft="15dp"
        android:paddingRight="5dp" />

    <Button
        android:id="@+id/btnActLoginVerifyInvite"
        style="?ButtonRoundCorner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/edtActLoginInvitationCode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/g_label_verify_invitation" />

    <TextView
        android:id="@+id/txtActLoginVerifyInviteError"
        style="?TextViewGrayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActLoginVerifyInvite"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="@string/g_error_invtation_code" />

</RelativeLayout>