<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?ActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/tableActListingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp" >

        <!-- User Info -->

        <TableRow
            android:id="@+id/tableRowActListingDetailsUserDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:weightSum="100" >

            <include
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                layout="@layout/view_user_details" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowActListingDetailsPhotos"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="2dip"
            android:weightSum="100" >

            <Gallery
                android:id="@+id/galleryActListingDetailsPhotos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="100"
                android:background="@color/gray"
                android:gravity="bottom"
                android:minHeight="90dp"
                android:padding="5dp"
                android:spacing="5dp" />
        </TableRow>
        <!-- actionbar Buttons -->

        <TableRow
            android:id="@+id/tableRowActListingDetailsFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:weightSum="100" >

            <!-- Flag -->

            <ImageButton
                android:id="@+id/btnActListingDetailsFlag"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:background="@color/light_blue"
                android:src="@drawable/icon_flag_white" />

            <Button
                android:id="@+id/btnActListingDetailsGetIt"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="60"
                android:background="@color/light_blue"
                android:text="@string/label_detail_listing_get_it"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <!-- Send Message -->

            <ImageButton
                android:id="@+id/btnActListingDetailsBookmark"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="20"
                android:background="@color/light_blue"
                android:src="@drawable/icon_star_0_white" />
        </TableRow>
        <!-- Description -->

        <TableRow
            android:id="@+id/tableRowActListingDetailsDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dip"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txtActListingDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="100"
                android:maxLines="5"
                android:minLines="1"
                android:textSize="12sp" />
        </TableRow>
        <!-- Map view -->

        <TableRow
            android:id="@+id/tableRowActListingDetailsMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:weightSum="100" >

            <com.google.android.maps.MapView
                android:id="@+id/mapviewActListingDetails"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="100"
                android:apiKey="@string/google_map_api_key"
                android:clickable="true" />
        </TableRow>

        <!-- Old -->
    </TableLayout>

</ScrollView>