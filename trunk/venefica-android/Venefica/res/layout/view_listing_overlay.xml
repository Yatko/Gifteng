<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:orientation="horizontal" 
	android:paddingBottom="25dip"
	android:paddingLeft="10dip" 
	android:minWidth="200dip" 
	android:id="@+id/layListingOverlay"
	android:background="@drawable/balloon_overlay_bg_selector"
	android:paddingTop="0dip"
	android:paddingRight="10dip"
	android:baselineAligned="false"> 

    <!-- your click region must be some sort of layout container using @id/layListingOverlayInnerLayout -->
    
    <LinearLayout
        android:id="@+id/layListingOverlayInnerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imgListingOverlayImage"
            android:layout_width="40dip"
            android:layout_height="54dip"
            android:src="@drawable/ic_launcher"
            android:paddingTop="10dip"
            android:paddingRight="10dip" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/txtListingOverlayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="balloon_item_title"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/txtListingOverlaySnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="balloon_item_snippet"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12dip" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
