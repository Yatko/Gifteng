        -->

        <EditText
            android:id="@+id/edtActPostListingState"
            style="?EditTextSingleLine"
            android:background="@drawable/corners"
            android:inputType="text"
            android:visibility="gone" />
        <!-- County -->


        <!--
             <TextView
            android:id="@+id/txtActPostListingCounty"
            style="?LabelEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_county" />
        -->

        <EditText
            android:id="@+id/edtActPostListingCounty"
            style="?EditTextSingleLine"
            android:background="@drawable/corners"
            android:inputType="text"
            android:visibility="gone" />

        <!-- City -->


        <!--
             <TextView
            android:id="@+id/txtActPostListingCity"
            style="?LabelEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_city" />
        -->

        <EditText
            android:id="@+id/edtActPostListingCity"
            style="?EditTextSingleLine"
            android:background="@drawable/corners"
            android:inputType="text"
            android:visibility="gone" />

        <!-- Area -->


        <!--
             <TextView
            android:id="@+id/txtActPostListingArea"
            style="?LabelEditText"
            android:layout_width="wrap_content"
