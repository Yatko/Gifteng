        -->

        <EditText
            android:id="@+id/edtActPostListingLongitude"
            style="?EditTextSingleLine"
            android:background="@drawable/corners"
            android:inputType="numberDecimal"
            android:visibility="gone" />

        <!-- Zip -->


        <!--
             <TextView
            android:id="@+id/txtActPostListingZip"
            style="?LabelEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_zip" />
        -->

        <EditText
            android:id="@+id/edtActPostListingZip"
            style="?EditTextSingleLine"
            android:background="@drawable/corners"
            android:inputType="number"
            android:maxLength="6"
            android:visibility="gone" />
        <!-- State -->


        <!--
             <TextView
            android:id="@+id/txtActPostListingState"
            style="?LabelEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
