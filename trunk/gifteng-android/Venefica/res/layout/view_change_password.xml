<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layActProfileChangePasswordRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edtActProfileOldPassword"
        style="?EditTextGrayBorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:hint="@string/g_label_password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtActProfileNewPassword"
        style="?EditTextGrayBorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:hint="@string/g_hint_new_password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edtActProfileNewPasswordConfirm"
        style="?EditTextGrayBorder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:hint="@string/g_hint_conf_password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnActProfileSave"
        style="?ButtonRoundCorner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/g_label_save" />
</LinearLayout>