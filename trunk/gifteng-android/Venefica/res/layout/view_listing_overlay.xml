<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layListingOverlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balloon_overlay_bg_selector"
    android:baselineAligned="false"
    android:minWidth="200dip"
    android:orientation="horizontal"
    android:paddingBottom="25dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="0dip" >

    <!-- your click region must be some sort of layout container using @id/layListingOverlayInnerLayout -->

    <LinearLayout
        android:id="@+id/layListingOverlayInnerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imgListingOverlayImage"
            android:layout_width="40dip"
            android:layout_height="54dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/txtListingOverlayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/primary_text_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtListingOverlaySnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>