<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?ActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtActMessageListTitle"
        style="?LabelGroupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/label_messages" />

    <Spinner
        android:id="@+id/spinActMessageListType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txtActMessageListTitle"
        android:entries="@array/array_message_types" />

    <ListView
        android:id="@+id/listActMessageList"
        style="?ViewGroupBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtActMessageListTitle"
        android:layout_margin="5dp"
        android:dividerHeight="2sp" />

</RelativeLayout>